        <li>Employees</li></a>
    </ul>
</div>
<div id="content-right">
    <div class="path-admin">CREATE A NEW PRODUCT</b></div>
    <div class="content-main">
        <form id="content-main-product" method="post">
            <div class="content-main-1">
                <label>LastName (*):</label><br />
                <input type="text" asp-for="Request.EmployeeId" hidden />
                <input type="text" asp-for="Request.LastName" value="@ViewData["LastName"]"><br />
                <span class="msg-error">@ViewData["ErrorLastName"]</span><br />
                <label>FirstName (*):</label><br />
                <input type="text" asp-for="Request.FirstName" value="@ViewData["FirstName"]"><br />
                <span class="msg-error">@ViewData["ErrorFirstName"]</span><br />
                <label>TitleOfCourtesy (*):</label><br />
                <input type="text" asp-for="Request.TitleOfCourtesy" value="@ViewData["TitleOfCourtesy"]"><br />
                <label>Title (*):</label><br />
                <input type="text" asp-for="Request.Title" value="@ViewData["Title"]"><br />
            </div>
            <div class="content-main-1">
                <label>Department (*):</label><br />
                <select asp-for="Request.DepartmentId" class="form-control" asp-items="@Model.DepartmentIds"></select>
                <br />
                <label>BirthDate :</label><br />
                <input type="date" asp-for="Request.BirthDate" value="@ViewData["BirthDates"]"><br />
                @*<span class="msg-error" asp-validation-for="@Model.Employee.BirthDate"></span><br />*@
                <label>HireDate :</label><br />
                <input type="date" asp-for="Request.HireDate" value="@ViewData["HireDates"]"><br />
                <label>Address :</label><br />
                <input type="text" asp-for="Request.Address" value="@ViewData["Address"]"><br />
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>