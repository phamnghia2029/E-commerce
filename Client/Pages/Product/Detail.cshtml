@page "{id}"
@model Client.Pages.Product.Detail

<div id="content-detail">
    <div id="content-title">
        <a href="index.html">Home</a> >
        <a href="category1.html">Category 1</a> >
        Model: SP1
    </div>
    <div id="product">
        <div id="product-name">
            <h2>@Model.Product.ProductName</h2>
            <div id="product-detail">
                <div id="product-detail-left">
                    <div id="product-img">
                        <img src="https://product.hstatic.net/1000230642/product/dsm075033trg__5__93a59bf7c33f434f96ce6d069ba78933.jpg" />
                    </div>
                    <div id="product-img-items">
                        <div><a href="#"><img src="https://product.hstatic.net/1000230642/product/dsm075033trg__5__93a59bf7c33f434f96ce6d069ba78933.jpg" /></a></div>
                        <div><a href="#"><img src="https://product.hstatic.net/1000230642/product/dsm075033trg__5__93a59bf7c33f434f96ce6d069ba78933.jpg" /></a></div>
                        <div><a href="#"><img src="https://product.hstatic.net/1000230642/product/dsm075033trg__5__93a59bf7c33f434f96ce6d069ba78933.jpg" /></a></div>
                        <div><a href="#"><img src="https://product.hstatic.net/1000230642/product/dsm075033trg__5__93a59bf7c33f434f96ce6d069ba78933.jpg" /></a></div>
                    </div>
                </div>
                <div id="product-detail-right">
                    <div id="product-detail-right-content">
                        <div id="product-price">$ @Model.Product.UnitPrice</div>
                        <div id="product-status">In stock</div>
                        <div id="product-detail-buttons">
                            <div id="product-detail-button">
                                <form method="post" asp-page-handler="buy">
                                    <input type="button" value="BUY NOW" onclick="this.form.submit()">
                                    <input type="hidden" value="@Model.Product.ProductId" name="productId">
                                </form>
                                <form method="post" asp-page-handler="add" id="addform">
                                    <input type="button" value="ADD TO CART" style="background-color: #fff; color:red;border: 1px solid gray;" onclick="submitForm();">
                                    <input type="hidden" value="@Model.Product.ProductId" name="productId">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="info-detail">
        <div id="info-detail-title">
            <h2>Information deltail</h2>
